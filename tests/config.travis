#
# Board Selection
#
# CONFIG_BOARD_CUBIEBOARD1 is not set
# CONFIG_BOARD_CUBIEBOARD2 is not set
# CONFIG_BOARD_CUBIEBOARD4 is not set
CONFIG_BOARD_CUBIETRUCK=y
# CONFIG_BOARD_MX6QSABRESD is not set
# CONFIG_BOARD_CUBIEBOARD1_MANIFEST_LINUX_XML is not set
# CONFIG_BOARD_CUBIEBOARD2_MANIFEST_LINUX_XML is not set
# CONFIG_BOARD_CUBIETRUCK_MANIFEST_LINUX_4_2_6_GRSEC_XML is not set
# CONFIG_BOARD_CUBIETRUCK_MANIFEST_LINUX_4_3_5_GRSEC_XML is not set
CONFIG_BOARD_CUBIETRUCK_MANIFEST_LINUX_XML=y
CONFIG_BOARD="Cubietruck"
CONFIG_MANIFEST="linux.xml"

#
# Toolchain
#
CONFIG_GCC_PREFIX="arm-linux-gnueabihf-"
CONFIG_JOBS=3
CONFIG_QEMU_ARM_STATIC="qemu-arm-static"

#
# Distribution
#
CONFIG_DEBOOTSTRAP_DISTRIBUTION="stable"
CONFIG_DEBOOTSTRAP_MIRROR="http://ftp.debian.org/debian"
CONFIG_DEBOOTSTRAP="/usr/sbin/debootstrap"
CONFIG_DEBOOTSTRAP_HTTP_PROXY="$http_proxy"
CONFIG_PACKAGES="vim sudo openssh-server"
CONFIG_MAC_ADDRESS="001122334455"
CONFIG_ROOT_PASSWORD="root"
CONFIG_ADMIN_PASSWORD="admin"
CONFIG_HOSTNAME="board-sbxg-travis"

#
# Kernel
#
# CONFIG_USE_MAKE_KPKG is not set
# CONFIG_MAKE_KPKG_KERNEL_IMAGE is not set
# CONFIG_MAKE_KPKG_KERNEL_HEADERS is not set
# CONFIG_MAKE_KPKG_KERNEL_DOC is not set
# CONFIG_MAKE_KPKG_KERNEL_SOURCE is not set

#
# Image
#
CONFIG_IMAGE_HASH_MD5=y
# CONFIG_IMAGE_HASH_SHA1 is not set
# CONFIG_IMAGE_HASH_SHA256 is not set
CONFIG_IMAGE_COMPRESSION_NONE=y
# CONFIG_IMAGE_COMPRESSION_GZ is not set
# CONFIG_IMAGE_COMPRESSION_BZIP is not set
# CONFIG_IMAGE_COMPRESSION_XZ is not set
CONFIG_LINUX_DIR="linux-stable"
CONFIG_UBOOT_DIR="u-boot"
CONFIG_BOARDS_DIR="boards"
CONFIG_KERNEL_CONFIGS_DIR="kernel-configs"
CONFIG_SCRIPTS_DIR="scripts"
CONFIG_CHROOT_DIR="build/chroot-arm"
CONFIG_RESOURCES_DIR="resources"
CONFIG_HOOKS_DIR="hooks"
CONFIG_IMAGES_DIR="build/images"
CONFIG_BUILD_DIR="build"
